<header class="header header-fixed">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="logo">
        <a href="">
          Lusion
        </a>
      </h1>
      <nav class="navbar">
        <ul class="main-menu d-flex justify-content-between">
          <li class="menu-item">
            <a href="" class="menu-link">
              Home
            </a>
          </li>
          <li class="menu-item">
            <a href="" class="menu-link">
              Shop
            </a>
          </li>
          <li class="menu-item">
            <a href="" class="menu-link">
              Product
            </a>
          </li>
          <li class="menu-item">
            <a href="" class="menu-link">
              Contact
            </a>
          </li>
          <li class="menu-item">
            <a href="" class="menu-link">
              Blog
            </a>
          </li>
        </ul>
      </nav>
      <ul class="user-action d-flex justify-content-between">
        <li class="user-action-item">
          <button class="btn btn-has-icon btn-user-action">
            <span>
              <svg aria-hidden="true" focusable="false">
                <use href="#icon-search">
              </svg>
            </span>
          </button>
        </li>
        <li class="user-action-item">
          <a href="#" class="btn btn-user-action">
            <span>
              {% render 'icon-account' %}
            </span>
          </a>
        </li>
        <li class="user-action-item">
          <a class="btn btn-user-action" href="#">
            <span>
              {% render 'icon-cart' %}
            </span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</header>
